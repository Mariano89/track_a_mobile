

<h1>Garage</h1>
<br>
<h3><%= link_to 'Add New Vehicle', new_car_path %></h3>
<br>

<table class="table">

	<thead>
		<th> Owner </th>
		<th> Make </th>
		<th> Model </th>
		<th> Year </th>
		<th> Color </th>
		<th> Odometer </th>
	</thead>

	<tbody>
		<% @cars.each do |c| %>
			<tr>
				<td><%= c.owner %></td>
				<td><%= c.make %></td>
				<td><%= c.model %></td>
				<td><%= c.year %></td>
				<td><%= c.color %></td>
				<td><%= c.odometer %></td>
				<td><%= link_to 'Edit', edit_car_path(c) %>| 
						<%= link_to 'X', c, method: :delete %> </td>
			</tr>

	<% end %>
	</tbody>
</table>
<!-- ** Sign up new page ** -->


<h1>Sign up</h1>
<br>

<%= form_for @user do |f| %>

	Name: <br>
	<%= f.text_field :name %> <br>

	Email: <br>
	<%= f.text_field :email %> <br>

	Password: <br>
	<%= f.password_field :password %> <br>

	Confirm Password: <br>
	<%= f.password_field :password_confirmation %><br>
	
	<%= f.submit "Sign Up" %>

<% end %>

	



